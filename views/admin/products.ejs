<%- include('../partials/admin-header', { title: 'Products', currentPage: 'products' }) %>
<div class="d-flex justify-content-between align-items-center mb-3">
  <h2 class="h4 mb-0">Products</h2>
  <a href="/admin/products/new" class="btn btn-primary">New Product</a>
</div>
<div class="table-responsive">
  <table class="table align-middle">
    <thead>
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th>Description</th>
        <th>Sizes</th>
        <th>Order</th>
        <th>Status</th>
        <th>Created</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% if (products && products.length) { %> 
        <% products.forEach(p => { %>
          <tr>
            <td>
              <% 
                let productThumbUrl = '';
                if (p.mainImage) {
                  if (typeof p.mainImage === 'object' && p.mainImage.sizes) {
                    productThumbUrl = '/public/' + (p.mainImage.sizes.thumbnail?.url || p.mainImage.sizes.medium?.url || '');
                  }
                } else if (p.image) {
                  productThumbUrl = p.image;
                }
              %>
              <% if (productThumbUrl) { %>
                <img src="<%= productThumbUrl %>" style="width:60px;height:60px;object-fit:cover" class="img-thumbnail">
              <% } else { %>
                <span class="text-muted">No image</span>
              <% } %>
            </td>
            <td><%= p.name %></td>
            <td class="text-truncate" style="max-width: 300px">
              <%= p.shortDescription || p.description %>
            </td>
            <td>
              <% if (p.sizes && p.sizes.length > 0) { %>
                <span class="badge bg-secondary"><%= p.sizes.join(', ') %></span>
              <% } else { %>
                <span class="text-muted">-</span>
              <% } %>
            </td>
            <td><%= p.order %></td>
            <td>
              <% if (p.isActive) { %>
                <span class="badge bg-success">Active</span>
              <% } else { %>
                <span class="badge bg-secondary">Inactive</span>
              <% } %>
            </td>
            <td><%= new Date(p.createdAt).toLocaleDateString() %></td>
            <td class="text-end">
              <a href="/admin/products/<%= p._id %>/edit" class="btn btn-sm btn-outline-primary">Edit</a>
              <form action="/admin/products/<%= p._id %>/delete" method="POST" class="d-inline" onsubmit="return confirm('Delete this product?')">
                <button class="btn btn-sm btn-outline-danger">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %> 
      <% } else { %>
        <tr>
          <td colspan="8" class="text-center text-muted">No products yet.</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>
<%- include('../partials/admin-footer') %>

