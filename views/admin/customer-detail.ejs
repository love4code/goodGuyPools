<%- include('../partials/admin-header', { title: 'Customer Detail', currentPage: 'customers' }) %>
<div class="mb-3">
  <a href="/admin/customers" class="btn btn-sm btn-outline-secondary">&larr; Back</a>
</div>
<div class="row g-4">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h3 class="h5 mb-0">Customer Information</h3>
      </div>
      <div class="card-body">
        <p><strong>Name:</strong> <%= customer.name %></p>
        <% if (customer.email) { %>
          <p><strong>Email:</strong> <a href="mailto:<%= customer.email %>"><%= customer.email %></a></p>
        <% } %>
        <% if (customer.phone) { %>
          <p><strong>Phone:</strong> <a href="tel:<%= customer.phone %>"><%= customer.phone %></a></p>
        <% } %>
        <% if (customer.address || customer.city || customer.state || customer.zipCode) { %>
          <p><strong>Address:</strong><br>
            <%= customer.address || '' %>
            <% if (customer.city || customer.state || customer.zipCode) { %>
              <br><%= customer.city || '' %><%= customer.city && customer.state ? ', ' : '' %><%= customer.state || '' %> <%= customer.zipCode || '' %>
            <% } %>
          </p>
        <% } %>
        <% if (customer.notes) { %>
          <div class="mb-3">
            <strong>Notes:</strong>
            <div class="border rounded p-3 bg-light mt-2"><%= (customer.notes || '').replace(/\n/g, '<br>') %></div>
          </div>
        <% } %>
        <p class="text-muted small"><strong>Created:</strong> <%= new Date(customer.createdAt).toLocaleString() %></p>
        <div class="mt-3">
          <a href="/admin/customers/<%= customer._id %>/edit" class="btn btn-primary">Edit Customer</a>
          <a href="/admin/sales/new?customerId=<%= customer._id %>" class="btn btn-success">Add Sale</a>
          <a href="/admin/products/new?returnTo=/admin/customers/<%= customer._id %>" class="btn btn-outline-primary" target="_blank">
            <i class="bi bi-plus-circle"></i> Add Product
          </a>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="h5 mb-0">Sales History</h3>
        <a href="/admin/sales/new?customerId=<%= customer._id %>" class="btn btn-sm btn-success">Add Sale</a>
      </div>
      <div class="card-body">
        <% if (sales && sales.length) { %>
          <div class="table-responsive">
            <table class="table table-sm">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Products</th>
                  <th>Total</th>
                  <th>Status</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% sales.forEach(sale => { %>
                  <tr>
                    <td><%= new Date(sale.saleDate).toLocaleDateString() %></td>
                    <td>
                      <% if (sale.lineItems && sale.lineItems.length > 0) { %>
                        <% if (sale.lineItems.length === 1) { %>
                          <%= sale.lineItems[0].product ? sale.lineItems[0].product.name : 'N/A' %>
                        <% } else { %>
                          <%= sale.lineItems.length %> products
                        <% } %>
                      <% } else if (sale.product) { %>
                        <%= sale.product.name %>
                      <% } else { %>
                        N/A
                      <% } %>
                    </td>
                    <td><strong>$<%= (sale.total || sale.amount || 0).toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></strong></td>
                    <td>
                      <% if (sale.isPaid) { %>
                        <span class="badge bg-success">Paid</span>
                      <% } else { %>
                        <span class="badge bg-warning">Unpaid</span>
                      <% } %>
                    </td>
                    <td>
                      <a href="/admin/sales/<%= sale._id %>" class="btn btn-sm btn-outline-primary">View</a>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <p class="text-muted text-center">No sales recorded yet.</p>
        <% } %>
      </div>
    </div>
  </div>
</div>
<%- include('../partials/admin-footer') %>
