<%- include('../partials/admin-header', { title: 'Sales', currentPage: 'sales' }) %>
<div class="d-flex justify-content-between align-items-center mb-3">
  <h2 class="h4 mb-0">Sales</h2>
  <a href="/admin/sales/new" class="btn btn-primary">New Sale</a>
</div>
<form class="row g-2 mb-3" method="GET" action="/admin/sales">
  <div class="col-md-5">
    <select name="paid" class="form-select">
      <option value="">All Payment Status</option>
      <option value="true" <%= paid==='true'?'selected':'' %>>Paid</option>
      <option value="false" <%= paid==='false'?'selected':'' %>>Unpaid</option>
    </select>
  </div>
  <div class="col-md-2">
    <button class="btn btn-outline-secondary w-100">Filter</button>
  </div>
</form>
<div class="table-responsive">
  <table class="table align-middle">
    <thead>
      <tr>
        <th>Date</th>
        <th>Customer</th>
        <th>Products</th>
        <th>Total Amount</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% if (sales && sales.length) { %>
        <% sales.forEach(s => { %>
          <tr>
            <td><%= new Date(s.saleDate).toLocaleDateString() %></td>
            <td>
              <strong><%= s.customer ? s.customer.name : 'N/A' %></strong>
              <% if (s.customer && s.customer.email) { %>
                <br><small class="text-muted"><%= s.customer.email %></small>
              <% } %>
            </td>
            <td>
              <% if (s.lineItems && s.lineItems.length > 0) { %>
                <% if (s.lineItems.length === 1) { %>
                  <%= s.lineItems[0].product ? s.lineItems[0].product.name : 'N/A' %>
                <% } else { %>
                  <%= s.lineItems.length %> products
                  <br><small class="text-muted">
                    <% s.lineItems.slice(0, 2).forEach((item, idx) => { %>
                      <%= item.product ? item.product.name : 'N/A' %><%= idx < Math.min(s.lineItems.length, 2) - 1 ? ', ' : '' %>
                    <% }) %>
                    <% if (s.lineItems.length > 2) { %>...<% } %>
                  </small>
                <% } %>
              <% } else if (s.product) { %>
                <%= s.product.name %>
              <% } else { %>
                N/A
              <% } %>
            </td>
            <td><strong>$<%= (s.total || s.amount || 0).toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></strong></td>
            <td>
              <% if (s.isPaid) { %>
                <span class="badge bg-success">Paid</span>
              <% } else { %>
                <span class="badge bg-warning">Unpaid</span>
              <% } %>
            </td>
            <td class="text-end">
              <a href="/admin/sales/<%= s._id %>" class="btn btn-sm btn-outline-primary">View</a>
              <a href="/admin/sales/<%= s._id %>/edit" class="btn btn-sm btn-outline-secondary">Edit</a>
              <form action="/admin/sales/<%= s._id %>/delete" method="POST" class="d-inline" onsubmit="return confirm('Delete this sale?')">
                <button class="btn btn-sm btn-outline-danger">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="6" class="text-center text-muted">No sales found.</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>
<% if (total > perPage) { %>
  <nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
      <% const totalPages = Math.ceil(total / perPage) %>
      <% for (let i = 1; i <= totalPages; i++) { %>
        <li class="page-item <%= i === page ? 'active' : '' %>">
          <a class="page-link" href="?page=<%= i %><%= paid ? '&paid=' + paid : '' %><%= customerId ? '&customerId=' + customerId : '' %>"><%= i %></a>
        </li>
      <% } %>
    </ul>
  </nav>
<% } %>
<%- include('../partials/admin-footer') %>
