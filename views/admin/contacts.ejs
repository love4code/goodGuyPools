<%- include('../partials/header', { title: 'Contacts', settings }) %>
<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h4 mb-0">Inquiries</h1>
</div>
<form class="row g-2 mb-3">
  <div class="col-md-5">
    <select name="type" class="form-select">
      <option value="">All Types</option>
      <option <%= type==='New pool construction'?'selected':'' %> >New pool construction</option>
      <option <%= type==='Renovation'?'selected':'' %> >Renovation</option>
      <option <%= type==='Maintenance/Service'?'selected':'' %> >Maintenance/Service</option>
    </select>
  </div>
  <div class="col-md-5">
    <select name="read" class="form-select">
      <option value="">All</option>
      <option value="true" <%= read==='true'?'selected':'' %>>Read</option>
      <option value="false" <%= read==='false'?'selected':'' %>>Unread</option>
    </select>
  </div>
  <div class="col-md-2"><button class="btn btn-outline-secondary w-100">Filter</button></div>
</form>
<div class="table-responsive">
  <table class="table align-middle">
    <thead><tr><th>Name</th><th>Town</th><th>Phone</th><th>Email</th><th>Type</th><th>When</th><th></th></tr></thead>
    <tbody>
      <% if (contacts && contacts.length) { %>
        <% contacts.forEach(c => { %>
          <tr class="<%= c.isRead ? '' : 'table-warning' %>">
            <td><%= c.name %></td>
            <td><%= c.town %></td>
            <td><%= c.phoneNumber %></td>
            <td><%= c.email %></td>
            <td><%= c.projectType %></td>
            <td><%= new Date(c.createdAt).toLocaleString() %></td>
            <td class="text-end">
              <a href="/admin/contacts/<%= c._id %>" class="btn btn-sm btn-outline-primary">View</a>
              <form action="/admin/contacts/<%= c._id %>/toggle-read" method="POST" class="d-inline">
                <button class="btn btn-sm btn-outline-secondary"><%= c.isRead ? 'Mark Unread' : 'Mark Read' %></button>
              </form>
              <form action="/admin/contacts/<%= c._id %>/delete" method="POST" class="d-inline" onsubmit="return confirm('Delete this inquiry?')">
                <button class="btn btn-sm btn-outline-danger">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr><td colspan="7" class="text-center text-muted">No inquiries found.</td></tr>
      <% } %>
    </tbody>
  </table>
</div>
<%- include('../partials/footer', { settings }) %>


