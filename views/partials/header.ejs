<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>
      <%= typeof title !== 'undefined' ? title + ' - ' : '' %><%= (siteSettings
      && siteSettings.seo && siteSettings.seo.defaultTitle) || 'Goodfella Pools'
      %>
    </title>
    <meta
      name="description"
      content="<%= (siteSettings && siteSettings.seo && siteSettings.seo.defaultMetaDescription) || '' %>"
    />
    <% if (siteSettings && siteSettings.favicon) { %>
      <link rel="icon" type="image/x-icon" href="<%= siteSettings.favicon %>">
    <% } %>
    
    <% 
      // Get base URL for absolute URLs (required for Open Graph)
      // baseUrl is set in middleware via res.locals
      let siteBaseUrl = 'https://www.goodguypools.com';
      if (typeof baseUrl !== 'undefined' && baseUrl) {
        siteBaseUrl = baseUrl;
      }
      
      // Get OG image - prefer navbarLogo, fallback to defaultOgImage
      let ogImageUrl = '';
      if (siteSettings && siteSettings.navbarLogo) {
        if (typeof siteSettings.navbarLogo === 'object' && siteSettings.navbarLogo.sizes) {
          // Use fileId to access via /admin/media/image/{fileId}
          if (siteSettings.navbarLogo.sizes.large?.fileId) {
            ogImageUrl = siteBaseUrl + '/admin/media/image/' + siteSettings.navbarLogo.sizes.large.fileId;
          } else if (siteSettings.navbarLogo.sizes.medium?.fileId) {
            ogImageUrl = siteBaseUrl + '/admin/media/image/' + siteSettings.navbarLogo.sizes.medium.fileId;
          } else if (siteSettings.navbarLogo.sizes.thumbnail?.fileId) {
            ogImageUrl = siteBaseUrl + '/admin/media/image/' + siteSettings.navbarLogo.sizes.thumbnail.fileId;
          }
        }
      }
      
      // Fallback to defaultOgImage if logo not available
      if (!ogImageUrl && siteSettings && siteSettings.seo && siteSettings.seo.defaultOgImage) {
        // If defaultOgImage is already absolute, use it; otherwise make it absolute
        if (siteSettings.seo.defaultOgImage.startsWith('http://') || siteSettings.seo.defaultOgImage.startsWith('https://')) {
          ogImageUrl = siteSettings.seo.defaultOgImage;
        } else {
          ogImageUrl = siteBaseUrl + siteSettings.seo.defaultOgImage;
        }
      }
      
      // Get page title and description for OG tags
      const pageTitle = typeof title !== 'undefined' ? title + ' - ' : '';
      const fullTitle = pageTitle + ((siteSettings && siteSettings.seo && siteSettings.seo.defaultTitle) || 'Goodfella Pools');
      const pageDescription = (siteSettings && siteSettings.seo && siteSettings.seo.defaultMetaDescription) || '';
      const pageUrl = siteBaseUrl + (typeof req !== 'undefined' && req.originalUrl ? req.originalUrl : '/');
      const siteName = (siteSettings && siteSettings.companyName) || 'Goodfella Pools';
    %>
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="<%= pageUrl %>" />
    <meta property="og:title" content="<%= fullTitle %>" />
    <meta property="og:description" content="<%= pageDescription %>" />
    <% if (ogImageUrl) { %>
      <meta property="og:image" content="<%= ogImageUrl %>" />
      <meta property="og:image:width" content="1200" />
      <meta property="og:image:height" content="630" />
    <% } %>
    <meta property="og:site_name" content="<%= siteName %>" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content="<%= pageUrl %>" />
    <meta name="twitter:title" content="<%= fullTitle %>" />
    <meta name="twitter:description" content="<%= pageDescription %>" />
    <% if (ogImageUrl) { %>
      <meta name="twitter:image" content="<%= ogImageUrl %>" />
    <% } %>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/public/css/style.css" />
    <style>
      /* Header Theme Styles */
      .navbar {
        background-color: <%= (siteSettings && siteSettings.theme && siteSettings.theme.header) ? siteSettings.theme.header.backgroundColor : '#ffffff' %> !important;
        border-bottom-color: <%= (siteSettings && siteSettings.theme && siteSettings.theme.footer) ? siteSettings.theme.footer.borderColor : '#dee2e6' %> !important;
      }
      .navbar-brand {
        color: <%= (siteSettings && siteSettings.theme && siteSettings.theme.header) ? siteSettings.theme.header.textColor : '#0d6efd' %> !important;
      }
      .navbar-nav .nav-link {
        color: <%= (siteSettings && siteSettings.theme && siteSettings.theme.header) ? siteSettings.theme.header.linkColor : '#000000' %> !important;
      }
      .navbar-nav .nav-link:hover,
      .navbar-nav .nav-link:focus {
        color: <%= (siteSettings && siteSettings.theme && siteSettings.theme.header) ? siteSettings.theme.header.linkHoverColor : '#0d6efd' %> !important;
      }
      .navbar-nav .dropdown-menu {
        background-color: <%= (siteSettings && siteSettings.theme && siteSettings.theme.header) ? siteSettings.theme.header.backgroundColor : '#ffffff' %> !important;
      }
      .navbar-nav .dropdown-item {
        color: <%= (siteSettings && siteSettings.theme && siteSettings.theme.header) ? siteSettings.theme.header.linkColor : '#000000' %> !important;
      }
      .navbar-nav .dropdown-item:hover {
        background-color: <%= (siteSettings && siteSettings.theme && siteSettings.theme.header) ? siteSettings.theme.header.linkHoverColor : '#0d6efd' %> !important;
        color: #ffffff !important;
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light border-bottom">
      <div class="container">
        <a class="navbar-brand d-flex align-items-center" href="/">
          <% 
            // Handle both siteSettings (public) and settings (admin) variable names
            const siteConfig = typeof siteSettings !== 'undefined' ? siteSettings : (typeof settings !== 'undefined' ? settings : null);
            const companyName = siteConfig && siteConfig.companyName ? siteConfig.companyName : 'Goodfella Pools';
            const headerTextColor = siteConfig && siteConfig.theme && siteConfig.theme.header ? siteConfig.theme.header.textColor : '#0d6efd';
            
            // Get navbar logo - prefer navbarLogo (Media ref), fallback to old logo (string path)
            let logoUrl = '';
            if (siteConfig && siteConfig.navbarLogo) {
              // navbarLogo is a populated Media object
              if (typeof siteConfig.navbarLogo === 'object' && siteConfig.navbarLogo.sizes) {
                // Use fileId to access via /admin/media/image/{fileId}
                if (siteConfig.navbarLogo.sizes.medium?.fileId) {
                  logoUrl = '/admin/media/image/' + siteConfig.navbarLogo.sizes.medium.fileId;
                } else if (siteConfig.navbarLogo.sizes.large?.fileId) {
                  logoUrl = '/admin/media/image/' + siteConfig.navbarLogo.sizes.large.fileId;
                } else if (siteConfig.navbarLogo.sizes.thumbnail?.fileId) {
                  logoUrl = '/admin/media/image/' + siteConfig.navbarLogo.sizes.thumbnail.fileId;
                }
              }
            } else if (siteConfig && siteConfig.logo) {
              // Fallback to old logo string path
              logoUrl = siteConfig.logo;
            }
          %>
          <% if (logoUrl) { %>
            <img src="<%= logoUrl %>" alt="<%= companyName %>" style="height: 40px; max-width: 200px; object-fit: contain;">
          <% } else { %>
            <span class="fw-bold" style="color: <%= headerTextColor %>;">
              <%= companyName %>
            </span>
          <% } %>
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#mainNav"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="mainNav">
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
            <li class="nav-item">
              <a class="nav-link" href="/about">About</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/portfolio">Portfolio</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/products">Products</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/contact">Contact</a>
            </li>
            <% if (isAuthenticated) { %>
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                role="button"
                data-bs-toggle="dropdown"
              >
                Admin
              </a>
              <ul class="dropdown-menu dropdown-menu-end">
                <li><a class="dropdown-item" href="/admin">Dashboard</a></li>
                <li><hr class="dropdown-divider" /></li>
                <li>
                  <a class="dropdown-item" href="/admin/projects">Projects</a>
                </li>
                <li>
                  <a class="dropdown-item" href="/admin/projects/new"
                    >Add Project</a
                  >
                </li>
                <li><hr class="dropdown-divider" /></li>
                <li>
                  <a class="dropdown-item" href="/admin/products">Products</a>
                </li>
                <li>
                  <a class="dropdown-item" href="/admin/products/new"
                    >Add Product</a
                  >
                </li>
                <li><hr class="dropdown-divider" /></li>
                <li>
                  <a class="dropdown-item" href="/admin/media">Media Library</a>
                </li>
                <li>
                  <form
                    action="/admin/media/upload"
                    method="POST"
                    enctype="multipart/form-data"
                    class="px-3 py-2"
                  >
                    <input
                      type="file"
                      name="image"
                      accept="image/*"
                      class="form-control form-control-sm mb-2"
                    />
                    <button class="btn btn-sm btn-primary w-100">
                      Upload Media
                    </button>
                  </form>
                </li>
                <li><hr class="dropdown-divider" /></li>
                <li>
                  <a class="dropdown-item" href="/admin/services">Services</a>
                </li>
                <li>
                  <a class="dropdown-item" href="/admin/settings">Settings</a>
                </li>
                <li><hr class="dropdown-divider" /></li>
                <li>
                  <a class="dropdown-item text-danger" href="/admin/logout"
                    >Logout</a
                  >
                </li>
              </ul>
            </li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>
    <main class="py-4">
      <div class="container">
